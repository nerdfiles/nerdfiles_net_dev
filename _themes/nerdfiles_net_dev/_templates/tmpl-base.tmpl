<html lang="en">

<head>
{% analytical_head_top %}
<meta charset="utf-8" />

<link rel="dns-prefetch" href="//code.jquery.com" />
<link rel="dns-prefetch" href="//gittip.com" />
<link rel="dns-prefetch" href="//cdnjs.cloudflare.com" />
<link rel="dns-prefetch" href="//fonts.googleapis.com" />
<link rel="dns-prefetch" href="//nerdfilesdotnet.disqus.com" />
<link rel="dns-prefetch" href="//ajax.cloudflare.com" />

<title>{% page_attribute "page_title" %} &#9679; nerdfiles.net</title>

{% render_block "font" %}
{% render_block "css" %}
{% render_block "scriptloader" %}

{% analytical_head_bottom %}
</head>

<body class="nerdfiles-net {% block body_class %}base{% endblock %}">
{% analytical_body_top %}
{% cms_toolbar %}

<div class="container">

<nav id="site-access">
  <ul>
    <li><a href="#main-content">Skip to content</a></li>
  </ul>
</nav>

<header>
  <ul class="activities">

    <li class="lastfm">
      <a 
        href="http://www.last.fm/user/wittysense"
        title="
          #RECENTLY PLAYED TRACKS&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          {% for bob in rt %}
               {{ forloop.counter }}. {{ bob.title }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                   &#9656; {{ bob.url|cut:"www." }}{% if not forloop.last %}{% endif %}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          {% empty %}
          Must be trapped in a well or something...&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          {% endfor %}
        ">
        Recently Listened Tracks
      </a>
    </li>

  </ul>
	<h1>
    <a 
      href="http://nerdfiles.net"
      title="It's about time someone take things scificially.">
      nerdfiles.net
    </a>
  </h1>
</header>

{% cache 432000 kippt %}
<section class="important">
  <div class="ui widget kippt">
    {# if tweet #}
    <!--p>{{ tweet.text }}</p-->
    {# endif #}
    {% if kippt_saves %}
    <p>Hey, go read 
      {% if kippt_saves %}
        {% for save in kippt_saves %}
          
          {% if forloop.first %}
            <a 
              href="{{ save.url }}" 
              title="{{ save.title }}" 
              rel="external" 
            >this</a> and 
          {% endif %}

          {% if forloop.last %}
          <a 
            href="{{ save.url }}" 
            title="{{ save.title }}" 
            rel="external" 
          >this</a>.
          {% endif %}

        {% endfor %}
      {% endif %}
    </p>
    {% endif %}
  </div>
</section>
{% endcache %}

{% block main_content %}
<section>
    <article id="main-content">

        <!--section>
          <header>
            <h1>
            </h1>
          </header>
        </section-->
    
        <section>
        {% placeholder "Main Content" or %}
          <p>blugggh.</p>
        {% endplaceholder %}
        </section>

    </article>
</section>
{% endblock %}

{% block disqus %}
{% endblock %}

